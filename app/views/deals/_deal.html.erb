<% present deal, DealPresenter do |presenter| %>
  <div id="<%= dom_id deal %>" class="bg-gray-100 rounded-lg p-4 flex justify-between items-center">
    <div>
      <h4 class="font-bold text-gray-800"><%= deal.day %>: <span class="text-gray-600 font-normal"><%= presenter.time_range %></span></h4>
      <p class="text-gray-700"><%= deal.description %></p>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to edit_deal_path(deal), class: "text-gray-400 hover:text-blue-600" do %>
        <i class="ph-bold ph-pencil-simple text-lg"></i>
      <% end %>
      <%= button_to deal_path(deal), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this deal?" }, class: "text-gray-400 hover:text-red-600" do %>
        <i class="ph-bold ph-trash text-lg"></i>
      <% end %>
    </div>
  </div>
<% end %>
