<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6 text-center">Happy Hour Deals</h1>
  <% @restaurants.each do |restaurant| %>
    <div class="mb-10">
      <h2 class="text-2xl font-semibold text-blue-800 mb-2"><%= restaurant.name %></h2>
      <p class="text-gray-500 mb-4"><%= restaurant.address %> | <%= restaurant.phone %></p>
      <% restaurant.deals.group_by(&:day).each do |day, deals| %>
        <div class="mb-4">
          <h3 class="text-xl font-bold text-gray-700 mb-2"><%= day %></h3>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% deals.each do |deal| %>
              <div class="bg-white shadow rounded-xl p-4">
                <p class="text-gray-800"><%= deal.description %></p>
                <p class="text-sm text-gray-500 mt-1">
                  <%= deal.start_time.strftime("%l:%M %p") %> â€“ <%= deal.end_time.strftime("%l:%M %p") %>
                </p>
                <% if restaurant.website.present? %>
                  <a href="<%= restaurant.website %>" class="text-sm text-blue-500 mt-2 inline-block" target="_blank" rel="noopener">
                    Visit Website
                  </a>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
