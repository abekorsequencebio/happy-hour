<% present restaurant, RestaurantPresenter do |presenter| %>
  <div class="mb-10 px-4 py-8">
    <h2 class="text-2xl font-semibold text-blue-800 mb-2"><%= restaurant.name %>
      <%= link_to edit_restaurant_path(restaurant), class: "text-blue-500 hover:text-blue-700" do %>
        <i class="ph ph-pencil text-lg"></i>
      <% end %>
    </h2>
    <p class="text-gray-500 mb-4"><%= restaurant.address %> | <%= restaurant.phone %></p>
    <% if restaurant.website.present? %>
      <a href="<%= restaurant.website %>" class="text-sm text-blue-500 hover:underline mb-4 inline-block" target="_blank" rel="noopener">
        Visit Website
      </a>
    <% end %>
    <%= render partial: "deals/deal", collection: restaurant.deals, as: :deal %>
    <%= link_to new_deal_path(restaurant_id: restaurant.id), class: "flex items-center text-sm text-green-600 hover:text-green-700" do %>
      <i class="ph ph-plus-circle mr-1"></i>
      <span>Add Deal</span>
    <% end %>
  </div>
<% end %>